<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Open" />
            </items>
          </Menu>
          <Menu fx:id="strategyMenu" mnemonicParsing="false" text="Strategy">
            <items>
                  <RadioMenuItem mnemonicParsing="false" onAction="#setArrayIndex" text="ArrayList + Index">
                     <toggleGroup>
                        <ToggleGroup fx:id="strat" />
                     </toggleGroup></RadioMenuItem>
                  <RadioMenuItem mnemonicParsing="false" onAction="#setArrayForEach" text="ArrayList + ForEach Loop" toggleGroup="$strat" />
                  <RadioMenuItem mnemonicParsing="false" onAction="#setLinkedIndex" text="LinkedList + Index" toggleGroup="$strat" />
                  <RadioMenuItem mnemonicParsing="false" onAction="#setLinkedForEach" text="LinkedList + ForEach Loop" toggleGroup="$strat" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" prefWidth="60.0" text="Search:" textAlignment="CENTER" wrapText="true">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <HBox prefHeight="50.0" prefWidth="200.0">
         <children>
            <TextField fx:id="searchTextField" minWidth="10.0" onKeyReleased="#checkKey" prefHeight="50.0" prefWidth="560.0" promptText="Search">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" prefWidth="60.0" text="Matches:" />
      <HBox prefHeight="225.0" prefWidth="600.0">
         <children>
            <TextArea fx:id="matchTextArea" editable="false" prefHeight="200.0" prefWidth="560.0">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextArea>
         </children>
      </HBox>
      <HBox prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label fx:id="timeLabel" text="Time required: ">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="matchCounterLabel" text="Matches found:">
               <padding>
                  <Insets left="300.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </children>
